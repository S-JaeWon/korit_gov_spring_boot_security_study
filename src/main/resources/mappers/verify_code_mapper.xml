<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.korit.security_study.mapper.VerifyCodeMapper">


    <resultMap id="VerifyCodeResultMap" type="com.korit.security_study.entity.VerifyCode">
        <id property="userId" column="user_id" />
        <result property="verifyCode" column="verify_code" />
    </resultMap>

    <select id="findUserByUserId" resultMap="VerifyCodeResultMap">
        select
            *
        from
            verify_tb
        where
            user_id = #{userId}
    </select>

    <insert id="insertVerifyCode">
        insert into
            verify_tb
        values
            (#{userId}, #{verifyCode})
    </insert>

    <delete id="deleteVerifyCode">
        delete from
            verify_tb
        where
            user_id = #{userId}
    </delete>
</mapper>